<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeLabs1_2BActivity">

    <Button
        android:id="@+id/button_count_lab1_2b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#0024DD"
        android:text="@string/lab1_2a_button_label_count"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/button_zero_indicate"
        app:layout_constraintTop_toBottomOf="@+id/button_zero_indicate" />

    <Button
        android:id="@+id/button_toast_lab1_2b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/lab1_2a_button_label_toast"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_zero_indicate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#BBBABC"
        android:text="@string/btn_labs_1.2b_zero_btn"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/button_toast_lab1_2b"
        app:layout_constraintTop_toBottomOf="@+id/button_toast_lab1_2b" />

    <TextView
        android:id="@+id/show_count_lab1_2b"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="#FFEB3B"
        android:gravity="center"
        android:text="@string/lab1_2a_count_initial_value"
        android:textSize="160sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_toast_lab1_2b"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>